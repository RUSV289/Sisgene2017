<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="EXPORTAR DATOS"
        android:id="@+id/txExportar"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Buscar por:"
        android:id="@+id/textView5"
        android:layout_below="@+id/txExportar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fechas :"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="12dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Estado :"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/txExportar" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="BUSCAR"
        android:id="@+id/btnBuscar"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="66dp"
        android:background="@color/color_fondo_boton"
        android:textColor="@color/color_texto_boton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="SALIR"
        android:id="@+id/btnSalir"
        android:layout_marginBottom="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/spnEncuestadores"
        android:background="@color/color_fondo_boton"
        android:textColor="@color/color_texto_boton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="RESUMEN"
        android:id="@+id/btnResumen"
        android:layout_below="@+id/lstEncuestas"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginEnd="28dp"
        android:background="@color/color_fondo_boton"
        android:textColor="@color/color_texto_boton"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstEncuestas"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnSalir"
        android:layout_below="@+id/btnBuscar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juan Perez"
        android:id="@+id/txtSupervisor"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <Spinner
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:id="@+id/spnEncuestadores"
        android:layout_marginStart="36dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView4" />


</RelativeLayout>